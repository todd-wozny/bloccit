 <%= form_for [topic, post] do |f| %>
   <% if post.errors.any? %>
 # #6
     <div class="alert alert-danger">
 # #7
       <h4><%= pluralize(topic.errors.count, "error") %>.</h4>
       <ul>
         <% post.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
       </ul>
     </div>
   <% end %>
  # #8
   <%= form_group_tag(topic.errors[:name]) do %>
     <%= f.label :name %>
     <%= f.text_field :name, class: 'form-control', placeholder: "Enter Name" %>
   <% end %>
   <%= form_group_tag(topic.errors[:description]) do %>
     <%= f.label :description %>
     <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter Description" %>
   <% end %>
   <%= form_group_tag(topic.errors[:public]) do %>
    <%= f.label :public, class: 'checkbox' do %>
           <%= f.check_box :public %> 
   <% end %>
   <div class="form-group">
     <%= f.submit "Save", class: 'btn btn-success' %>
   </div>
 <% end %>

